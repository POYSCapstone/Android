<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.ki_word.NewActivity">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editNewId"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/editNewPw"
        android:layout_alignRight="@+id/buttRegister"
        android:layout_alignEnd="@+id/buttRegister" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType=""
        android:ems="10"
        android:id="@+id/editNewPw"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/editNewNick"
        android:layout_alignLeft="@+id/editNewId"
        android:layout_alignStart="@+id/editNewId" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType=""
        android:ems="10"
        android:id="@+id/editNewNick"
        android:layout_above="@+id/buttBack"
        android:layout_alignRight="@+id/buttRegister"
        android:layout_alignEnd="@+id/buttRegister"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/buttBack"
        android:layout_marginBottom="98dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="-20dp"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/buttRegister"
        android:layout_alignBottom="@+id/buttBack"
        android:layout_toRightOf="@+id/buttBack"
        android:layout_toEndOf="@+id/buttBack"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="    New Acccount"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_above="@+id/editNewId"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#3d3d3e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="ID"
        android:id="@+id/textView2"
        android:textSize="18dp"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/editNewId"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="PASSWORD"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/editNewPw"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="NICKNAME"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/editNewNick"
        android:layout_alignLeft="@+id/buttBack"
        android:layout_alignStart="@+id/buttBack"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="117dp"
        android:layout_marginStart="117dp" />
</RelativeLayout>
